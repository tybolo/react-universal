  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "run-script",
        "server:hot"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/dist/server/server.js",
      "sourceMaps": true,
    }
  ]
}
